<Window x:Class="Labb_3_CSharp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Labb_3_CSharp" xmlns:views="clr-namespace:Labb_3_CSharp.Views" xmlns:dialogs="clr-namespace:Labb_3_CSharp.Dialogs"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.InputBindings>
        <KeyBinding Key="U" Modifiers="Ctrl" Command="{Binding PlayerViewModel.UpdateButtonCommand}" />
    </Window.InputBindings>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <views:MenuView Grid.Row="0"/>
        <ContentControl Content="{Binding CurrentView}"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>

        <!--<views:ConfigurationView Grid.Row="1"/>-->

        <!--<views:PlayerView Grid.Row="1"/>-->

    </Grid>
</Window>
